    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        android:padding="15dp"
        app:cardBackgroundColor="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/canceltxt"
        android:textSize="12sp"
        android:layout_margin="5dp"
        android:textColor="@color/quantum_grey"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:padding="10dp"
        android:hint="Please enter the reason for cancellation?"
        android:fontFamily="@font/montserrat"
        android:background="@drawable/editdesign"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancelConfirm"
        android:text="Confirm cancellation"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/canceltxt"
        android:textSize="15sp"
        android:textColor="#42a626"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/montserrat"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dismissOrder"
        android:text="Dismiss"
        android:layout_toStartOf="@+id/cancelConfirm"
        android:layout_below="@id/canceltxt"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:fontFamily="@font/montserrat"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:padding="5dp"/>
    </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>