<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.viba.olokartusers.SellerProducts">




    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search for Products"
        android:paddingStart="25dp"
        android:fontFamily="@font/montserrat"
        android:paddingEnd="20dp"
        android:layout_margin="5dp"
        android:textColorHint="@android:color/black"
        android:textColor="@android:color/black"
        android:background="@drawable/editdesign"
        android:drawableRight="@drawable/searchbar"
        android:id="@+id/search_product"/>

    <Button
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:id="@+id/sow_categories"
        android:text="Categories"
        android:background="@drawable/btn2style"
        android:padding="5dp"
        android:fontFamily="@font/montserrat_bold"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:drawableStart="@drawable/cate"
        android:paddingStart="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"
        />

    <Button
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:id="@+id/sow_subcategories"
        android:text="Sub Categories"
        android:drawableStart="@drawable/cate"
        android:paddingStart="10dp"
        android:padding="5dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/montserrat_bold"
        android:background="@drawable/btn2style"
        android:textAllCaps="false"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"
        />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollCat"
        android:layout_below="@id/search_product">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Store Name"
        android:id="@+id/store_name"
        android:textSize="22sp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:textColor="#42a626"
        android:fontFamily="@font/montserrat_bold"
        />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Store City"
        android:id="@+id/store_city"
        android:textSize="15sp"
        android:padding="2dp"
        android:textColor="@android:color/black"
        android:textStyle="normal"
        android:layout_marginTop="2dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/roboto"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Store Km"
        android:layout_marginStart="10dp"
        android:layout_gravity="center"
        android:textStyle="italic"
        android:textColor="@android:color/black"
        android:layout_toEndOf="@+id/shop_city"
        android:id="@+id/store_km"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/roboto"/>
            </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/cardSearh"
       android:layout_marginTop="5dp"
       android:orientation="horizontal">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="#42a626">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginStart="40dp"
            android:textColor="#fff"
            android:id="@+id/store_rating"
            android:textSize="20dp"/>
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_below="@+id/store_rating"
               android:background="#42a626">
               <ImageView
                   android:layout_width="18dp"
                   android:layout_height="18dp"
                   android:src="@drawable/ratingstar"
                   android:layout_centerVertical="true"
                   android:id="@+id/star"
                  android:layout_marginStart="40dp"/>

               <TextView
                   android:id="@+id/textrate"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="8dp"
                   android:layout_toEndOf="@+id/star"
                   android:textColor="#fff"
                   android:text="4.3"
                   android:fontFamily="@font/montserrat"
                   android:textSize="20dp" />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="24 Hrs"
                   android:textSize="18sp"
                   android:fontFamily="@font/montserrat"
                   android:textColor="#fff"
                   android:layout_alignParentEnd="true"
                   android:layout_marginEnd="80dp"/>



           </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_alignParentEnd="true"
            android:textColor="#fff"
            android:fontFamily="@font/montserrat_bold"
            android:textStyle="bold"
            android:layout_marginEnd="40dp"
            android:text="Delivery time"
            android:id="@+id/delivery_time"/>
       </RelativeLayout>
   </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cat_name"
                android:text=""
                android:textColor="@android:color/black"
                android:fontFamily="@font/montserrat"
                android:textSize="18sp"
                android:layout_marginStart="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/subcat_name"
            android:text=""
            android:layout_alignParentEnd="true"
            android:textColor="@android:color/black"
            android:fontFamily="@font/montserrat"
            android:textSize="18sp"
            android:layout_marginEnd="20dp"/>
    </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/all_recycler" />


            </RelativeLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</RelativeLayout>