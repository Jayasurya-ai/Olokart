<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/bagframelayout"
    android:layout_margin="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        android:elevation="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@android:color/darker_gray"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/bagproname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:padding="3dp"
                android:layout_margin="4dp"
                android:layout_marginTop="5dp"
               android:fontFamily="@font/montserrat_bold"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:layout_centerHorizontal="true"
                android:text="Product Name"
                />


            <TextView
                android:id="@+id/bagproprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/roboto"
                android:text="Rs"
                android:textSize="20sp" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bagproprice"
                android:padding="2dp">




                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bagqtyrelative"
                    android:layout_margin="10dp"
                   >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Qty"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:background="@drawable/qtydesign"
                        android:id="@+id/bagQuantity_text"
                        android:textSize="20sp"/>


                </RelativeLayout>


                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/bagnumber_Buttonqty"
                    app:textSize="15sp"
                    app:textColor="@android:color/white"
                    app:backGroundColor="#42a626"
                    android:layout_width="80dp"
                    android:layout_alignParentEnd="true"
                    android:visibility="visible"
                    android:splitMotionEvents="true"
                    android:layout_marginTop="5dp"
                    android:layout_height="35dp"
                    android:elevation="6dp"
                    android:gravity="center">

                </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

            </RelativeLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</FrameLayout>