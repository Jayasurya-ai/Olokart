                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/storedetails"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:src="@drawable/open"
                android:id="@+id/vendorstore_image"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sleer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Store Name"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/sleer_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/quantum_grey"
                    android:fontFamily="@font/roboto"
                    android:text="City"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bag Details"
                    android:textSize="20sp"
                    android:id="@+id/bagdetails"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="#42a626"
                    android:layout_below="@+id/storedetails"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="20dp"/>
                <View
                    android:layout_width="60dp"
                    android:layout_height="2dp"
                    android:background="@color/quantum_grey"
                    android:layout_below="@id/bagdetails"
                    android:layout_marginStart="20dp"
                    android:id="@+id/viewjdd"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Store Request"
                    android:textSize="20sp"
                    android:id="@+id/bagcycler"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/quantum_grey"
                    android:layout_below="@+id/bagrecycler"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="20dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/bagrecycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@+id/viewjdd"
                    android:layout_margin="10dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Storerequest"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/editdesign"
                    android:paddingStart="15dp"
                    android:layout_below="@id/bagcycler"
                    android:textSize="13sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:hint="Any Request for Store?"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/quantum_grey"
                    android:layout_below="@id/Storerequest"
                    android:layout_marginTop="20dp"
                    android:id="@+id/hajsji"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery Method"
                    android:textSize="20sp"
                    android:id="@+id/methodofdelivery"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/quantum_grey"
                    android:layout_below="@+id/hajsji"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"/>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/payRadio"
                    android:layout_below="@id/methodofdelivery">

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/pickup"
                        android:text="Pickup"
                        android:textSize="15sp"
                        android:fontFamily="@font/montserrat"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="15sp"/>

<!--                    <TextView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="FREE"-->
<!--                        android:textColor="#47a626"-->
