                        android:layout_height="wrap_content"
                        android:id="@+id/homeDel"
                        android:text="Home Delivery"
                        android:textSize="15sp" android:fontFamily="@font/montserrat"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="15sp"/>

                </RadioGroup>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/quantum_grey"
                    android:layout_below="@id/payRadio"
                    android:layout_marginTop="20dp"
                    android:id="@+id/ajdljsd"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ajdljsd"
                    android:id="@+id/Bill_details"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@android:color/white"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bill Details"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textColor="#42a626"
                        android:layout_margin="5dp"
                        android:textSize="17sp"
                        android:fontFamily="@font/montserrat_bold"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Item Total"
                            android:textSize="15sp"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/montserrat"/>


                        <TextView
                            android:id="@+id/totalpri"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="@font/montserrat_bold"
                            android:text="Total"
                            android:textSize="15sp" />



                    </RelativeLayout>







                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/TotalBill"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@android:color/white"
                    android:layout_below="@+id/Bill_details">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delivery Charges"
                            android:textSize="15sp"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/montserrat"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_margin="5dp"
                            android:text="₹0"
                            android:textSize="15sp" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="To Pay"
                            android:layout_margin="5dp"
                            android:fontFamily="@font/montserrat_bold"
                            android:textSize="15sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price"
                            android:layout_margin="5dp"
                            android:layout_centerVertical="true"
                            android:id="@+id/toopri"
                            android:textStyle="bold"
                            android:layout_alignParentEnd="true"
                            android:textSize="15sp"/>
                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.cardview.widget.CardView>


        </RelativeLayout>
    </RelativeLayout>


