<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="com.olokart.users.ProfileActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROFILE &amp; MORE"
        android:textColor="@android:color/white"
        android:fontFamily="@font/montserrat_bold"
        android:layout_gravity="center_horizontal"
        android:textSize="13dp"
        android:layout_marginTop="15dp"/>
    <ImageView
        android:layout_width="23dp"
        android:layout_height="30dp"
        android:src="@drawable/leftarrow"
        android:id="@+id/backProfile"
        android:layout_marginStart="15dp"
        android:layout_marginTop="12dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/userha"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="-100dp"
        app:cardCornerRadius="30dp">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userName"
            android:text="Your Name"
            android:textColor="@android:color/black"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="17sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="mobile Number"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:id="@+id/user_mobile"
            android:layout_below="@+id/userName"
            android:textSize="13sp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/editProfile"
                android:src="@drawable/pencil"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"/>
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:id="@+id/cardAbout"
                android:drawableStart="@drawable/ic_baseline_people_24"
                android:drawablePadding="15dp"
                android:textColor="#4d4d4d"
                android:textSize="15sp"
                android:fontFamily="@font/montserrat"
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:paddingEnd="15dp"
                android:layout_marginStart="10dp"
                android:textAllCaps="false"
                android:textStyle="bold"/>

        </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Terms &amp; Conditions"
                    android:id="@+id/cardTerms"
                    android:textColor="#4d4d4d"
                    android:textSize="15sp"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/montserrat"
                    android:drawableStart="@drawable/ic_baseline_speaker_notes_24"

                    android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:paddingEnd="15dp"
                    android:layout_marginStart="10dp"
                    android:textAllCaps="false"
                    android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Feedback"
                    android:id="@+id/cardFeedback"
                    android:drawableStart="@drawable/ic_baseline_star_border_24"
                    android:drawablePadding="15dp"
                    android:textColor="#4d4d4d"
                    android:textSize="15sp"
                    android:fontFamily="@font/montserrat"
                    android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:paddingEnd="15dp"
                    android:layout_marginStart="10dp"
                    android:textAllCaps="false"
                    android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Share App"
                    android:id="@+id/cardShare"
                    android:drawableStart="@drawable/ic_baseline_share_24"
                    android:drawablePadding="15dp"
                    android:textColor="#4d4d4d"
                    android:textSize="15sp"
                    android:fontFamily="@font/montserrat"
                    android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:paddingEnd="15dp"
                    android:layout_marginStart="10dp"
                    android:textAllCaps="false"
                    android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Disclaimer"
                    android:id="@+id/cardDesclaimer"
                    android:drawableStart="@drawable/ic_baseline_event_note_24"
                    android:drawablePadding="15dp"
                    android:textColor="#4d4d4d"
                    android:textSize="15sp"
                    android:fontFamily="@font/montserrat"
                    android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:paddingEnd="15dp"
                    android:layout_marginStart="10dp"
                    android:textAllCaps="false"
                    android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Help &amp; Support"
                    android:id="@+id/cardHelp"
                    android:drawableStart="@drawable/ic_baseline_help_24"
                    android:drawablePadding="15dp"
                    android:textColor="#4d4d4d"
                    android:textSize="15sp"
                    android:fontFamily="@font/montserrat"
                    android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:paddingEnd="15dp"
                    android:layout_marginStart="10dp"
                    android:textAllCaps="false"
                    android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_below="@+id/userha"
                android:layout_margin="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:id="@+id/cardLogout"
                    android:textColor="#4d4d4d"
                    android:textSize="15sp"
                    android:fontFamily="@font/montserrat_bold"
                    android:layout_centerVertical="true"
                    android:drawablePadding="15dp"
                    android:drawableStart="@drawable/ic_baseline_power_settings_new_24"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:textAllCaps="true"
                    android:textStyle="bold"/>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </androidx.cardview.widget.CardView>


        <com.github.ybq.android.spinkit.SpinKitView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/spin_kitProfile"
            style="@style/SpinKitView.DoubleBounce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            app:SpinKit_Color="#47a626" />
    </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/navigation_profile"
        android:padding="1dp"
        android:fitsSystemWindows="true"
        android:background="@drawable/downback"
        app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        app:menu="@menu/bottom_nav_menu"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>