<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black"
    tools:context=".PlacesAutocomplete">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search location"
        android:textColor="@android:color/white"
        android:textAllCaps="true"
        android:textSize="17sp"
        android:fontFamily="@font/montserrat_bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15sp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/crossImage"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_baseline_close_24"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"/>

    <com.github.ybq.android.spinkit.SpinKitView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/spin_kitOrderedSetLoc"
        style="@style/SpinKitView.CubeGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        app:SpinKit_Color="@android:color/holo_green_dark" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        app:cardCornerRadius="30dp"
        android:layout_marginBottom="-200dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relSearch">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find yourself!"
            android:textSize="30sp"
            android:id="@+id/findyourlsef"
            android:textColor="@android:color/black"
            android:fontFamily="@font/montserrat"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtsearch"
                android:text="Search your location and select"
                android:textColor="@android:color/black"
                android:layout_below="@+id/findyourlsef"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtsearchtxt"
                android:text="Search"
                android:fontFamily="@font/montserrat"
                android:layout_marginStart="15dp"
                android:textSize="15sp"
                android:layout_below="@id/txtsearch"
                android:layout_marginTop="10dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtsearchtxt"
                android:layout_margin="10dp">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search for Location"
                android:paddingStart="20sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="10dp"
                android:layout_centerVertical="true"
                android:drawableEnd="@drawable/searchbar"
                android:id="@+id/search_location_bar"/>
                <View
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:background="@color/quantum_grey"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="60dp"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
        </RelativeLayout>



    </androidx.cardview.widget.CardView>


