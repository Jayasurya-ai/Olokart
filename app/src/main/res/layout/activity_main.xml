<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="619dp"
        android:layout_alignBottom="@+id/lin"
        android:layout_marginBottom="-54dp"
        android:src="@drawable/registerback" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:fontFamily="@font/playfair_display"
        android:text="Welcome"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="230dp"
        android:src="@drawable/olokartlogoblack" />





<!--    <androidx.viewpager.widget.ViewPager-->
<!--        android:id="@+id/viewPager"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:layout_marginTop="3dp">-->


<!--    </androidx.viewpager.widget.ViewPager>-->
    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/buttons"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/buttons"
        android:layout_marginBottom="20dp">


        <Button
            android:id="@+id/register_google"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/registerbtn_style"
            android:drawableRight="@drawable/googlefix"
            android:fontFamily="@font/source_sans_pro"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Register  with"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Register with Phone"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:background="@drawable/regicterphone"
        android:fontFamily="@font/source_sans_pro"
        android:onClick="EmailPassword"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/register_google"/>
    </RelativeLayout>


</RelativeLayout>



