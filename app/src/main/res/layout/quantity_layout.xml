<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relQty"
    android:layout_centerHorizontal="true"
    android:layout_margin="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:elevation="10dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#fff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:padding="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/qty_image"
            android:src="@drawable/shopping_cart"
            android:layout_centerHorizontal="true"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:layout_below="@+id/qty_image"
                android:layout_centerHorizontal="true"
                android:textSize="17sp"
                android:layout_marginTop="5dp"
                android:textColor="#42a626"
               android:fontFamily="@font/montserrat_bold"
                android:id="@+id/qty_product_name"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="5dp"
                android:id="@+id/qty_linear"
                android:layout_below="@+id/qty_product_name">
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Qty"
                android:textColor="@android:color/black"
               android:fontFamily="@font/montserrat"
                android:layout_gravity="center"
                android:textSize="13sp"
                android:id="@+id/qty"
                android:layout_marginStart="10dp"/>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Pricea"
                    android:layout_gravity="center"
                    android:textColor="@android:color/black"
                    android:layout_marginStart="30dp"
                    android:textSize="15sp"
                    android:id="@+id/qty_price"/>
                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/number_Button"
                    app:textColor="@android:color/white"
                    app:backGroundColor="#42a626"
                    android:layout_width="80dp"
                    android:layout_gravity="center"
                    android:layout_below="@+id/qtyrelative"
                    android:visibility="visible"
                    android:layout_marginStart="5dp"
                    android:splitMotionEvents="true"
                    android:layout_height="38dp"
                    android:elevation="6dp"
                    android:gravity="center">

                </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/qtya_linear"
               android:gravity="center"
                android:layout_margin="5dp"
                android:layout_below="@+id/qty_linear">
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Qtya"
                android:textSize="13sp"
                android:id="@+id/qty_a"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
               android:fontFamily="@font/montserrat"
                android:layout_marginStart="10dp"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Priceb"
                android:textColor="@android:color/black"
                android:layout_marginStart="30dp"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:id="@+id/qty_pricea"/>

            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                android:id="@+id/number_Buttona"
                app:textColor="@android:color/white"
                android:layout_width="80dp"
                android:layout_alignParentEnd="true"
                app:backGroundColor="#42a626"
                android:layout_below="@+id/qtyrelative"
                android:visibility="visible"
                android:layout_marginStart="5dp"
                android:splitMotionEvents="true"
                android:layout_marginTop="5dp"
                android:layout_height="38dp"
                android:elevation="6dp"
                android:gravity="center">

            </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:gravity="center"
                android:id="@+id/qtyc_linear"
                android:layout_marginBottom="10dp"
                android:layout_below="@+id/qtya_linear">
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Qtyb"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:fontFamily="@font/montserrat"

                android:id="@+id/qty_b"
                android:layout_marginStart="10dp"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Priceb"
                android:layout_marginStart="30dp"
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:id="@+id/qty_priceb"/>

            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                android:id="@+id/number_Buttonb"
                app:textColor="@android:color/white"

                android:layout_width="80dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/qtyrelative"
                android:visibility="visible"
                app:backGroundColor="#42a626"
                android:splitMotionEvents="true"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_height="38dp"
                android:elevation="6dp"
                android:gravity="center">

            </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
