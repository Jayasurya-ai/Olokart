<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="22dp"
    android:layout_marginStart="22dp"
    android:layout_marginTop="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newHomeorderid"
        android:text="Order id"
        android:fontFamily="@font/montserrat"
        android:textSize="16sp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Bill"
            android:id="@+id/order_seeall"
            android:fontFamily="@font/montserrat"
            android:textColor="#47a626"
            android:textSize="17sp"
            android:textAllCaps="false"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Placed On: "
            android:fontFamily="@font/montserrat"
            android:layout_below="@+id/order_seeall"
            android:id="@+id/placedontext"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:layout_marginTop="18dp"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:fontFamily="@font/montserrat"
            android:layout_below="@+id/order_seeall"
            android:layout_toEndOf="@+id/placedontext"
            android:id="@+id/order_date"
            android:textSize="15sp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="10dp"
            android:textAllCaps="false"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount:       "
            android:fontFamily="@font/montserrat"
            android:layout_below="@+id/placedontext"
            android:id="@+id/amounttext"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat"
            android:id="@+id/bag_value"
            android:layout_below="@+id/placedontext"
            android:layout_toEndOf="@id/amounttext"
            android:layout_marginTop="10dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/deliveryStatus"
            android:text="Order Status"
            android:fontFamily="@font/montserrat_bold"
            android:layout_below="@id/amounttext"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:visibility="visible"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/deliverystatusstyle"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Order Cancelled"
            android:id="@+id/cancelOrdertxt"
            android:fontFamily="@font/montserrat_bold"
            android:layout_below="@id/amounttext"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="12sp"
            android:visibility="gone"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:textColor="#FF0000"/>
        <View
            android:layout_width="315dp"
            android:layout_height="1dp"
            android:background="@color/quantum_grey"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/deliveryStatus"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="2dp"/>
    </RelativeLayout>


