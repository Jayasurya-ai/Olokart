<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/frameSnack">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardCornerRadius="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        app:cardBackgroundColor="#fff"
        android:id="@+id/cards">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name_qty">

        <TextView
            android:id="@+id/proname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:layout_marginTop="3dp"
            android:padding="2dp"
            android:layout_marginStart="5dp"
          android:fontFamily="@font/montserrat_bold"
            android:inputType="textMultiLine"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:text="Product Name"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qty"
            android:padding="2dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/proname"
            android:textColor="@android:color/white"
            android:id="@+id/Quantity_text"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:textSize="20sp"/>

            <TextView
                android:id="@+id/proprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:textColor="@android:color/black"
                android:layout_marginStart="5dp"
                android:layout_below="@+id/qtytxta"
                android:layout_marginTop="20dp"
                android:text="Rs"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/qtytxta"
                android:text="qtya"
                android:fontFamily="@font/montserrat"
                android:padding="2dp"
                android:paddingStart="10dp"
                android:textSize="12sp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:layout_below="@id/proname"
                android:background="@drawable/qtydesign"/>
            <View
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:background="#42a626"
                android:layout_marginStart="8dp"
                android:layout_below="@+id/qtytxta"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/qtytxtb"
                android:text="qtya"
                android:visibility="gone"
                android:fontFamily="@font/montserrat"
                android:padding="2dp"
                android:layout_toEndOf="@id/qtytxta"
                android:textSize="13sp"
                android:paddingStart="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:layout_below="@id/proname"
                android:background="@drawable/qtydesign"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/qtytxtc"
                android:text="qtya"
                android:layout_toEndOf="@id/qtytxtb"
                android:fontFamily="@font/montserrat"
                android:textSize="13sp"
                android:visibility="gone"
                android:padding="2dp"
                android:paddingStart="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:layout_below="@id/proname"
                android:background="@drawable/qtydesign"/>

            <ImageView
                android:layout_width="135dp"
                android:layout_height="95dp"
                android:layout_margin="2dp"
                android:layout_toStartOf="@+id/stripgreen"
                android:src="@drawable/shopping_cart"
                android:id="@+id/proimage"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/stripgreenback"
                android:id="@+id/stripgreen"
                android:layout_alignParentEnd="true"/>

            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                android:id="@+id/number_Buttonqty"
                app:textColor="@android:color/black"
                app:backGroundColor="@android:color/white"
                android:layout_width="90dp"
                android:visibility="gone"
                android:background="@drawable/btnstl"
                android:layout_toStartOf="@+id/stripgreen"
                android:splitMotionEvents="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="25dp"
                android:layout_marginTop="5dp"
                android:layout_height="35dp"
                android:elevation="6dp"
                android:gravity="center">

            </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>
            <Button
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:id="@+id/addproductsbtn"
                android:text="Add to Bag"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="20dp"
                android:padding="4dp"
                android:textSize="13sp"
                android:layout_toStartOf="@+id/stripgreen"
                android:layout_marginBottom="2dp"
                android:textColor="@android:color/white"
                android:background="@drawable/btnstl"
                android:textAllCaps="false"
                android:fontFamily="@font/montserrat"/>

        </RelativeLayout>





    </androidx.cardview.widget.CardView>


